@model NZWalks.WEB.Models.AddRegionViewModel

@{
}

<h1 class="mt-3">Add a Region</h1>
<form method="post">

    <!-- Code -->
    <div class="mt-3">
        <label for="Code" class="form-label">Region Code</label>
        <input type="text" asp-for="Code" class="form-control" id="RegionCode" name="Code" placeholder="Enter Region Code" />
    </div>

    <!-- Name -->
    <div class="mt-3">
        <label for="Name" aso class="form-label">Region Name</label>
        <input type="text" asp-for="Name" class="form-control" id="RegionName" name="Name" placeholder="Enter Region Name" />
    </div>

    <!-- Image URL -->
    <div class="mt-3">
        <label for="RegionImageUrl" class="form-label">Image URL</label>
        <input type="text" asp-for="RegionImageUrl" class="form-control" id="ImageUrl" name="RegionImageUrl" placeholder="Enter a Image URL" />
    </div>

    <!-- Button -->
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>