@model NZWalks.WEB.Models.DTO.RegionDto

@{

}

<h1>Edit Region</h1>

@if (Model is not null)
{
    <form asp-action="Edit" asp-controller="Region" method="post">
        <input type="hidden" name="_method" value="put" />

        <!-- Id -->
        <div class="mt-3">
            <label class="form-label">Region Id</label>
            <input type="text" asp-for="Id" class="form-control" id="RegionId" name="Id" placeholder="Region Id" readonly />
        </div>


        <!-- Code -->
        <div class="mt-3">
            <label class="form-label">Region Code</label>
            <input type="text" asp-for="Code" class="form-control" id="RegionCode" name="Code" placeholder="Enter Region Code" />
        </div>

        <!-- Name -->
        <div class="mt-3">
            <label class="form-label">Region Name</label>
            <input type="text" asp-for="Name" class="form-control" id="RegionName" name="Name" placeholder="Enter Region Name" />
        </div>

        <!-- Image URL -->
        <div class="mt-3">
            <label class="form-label">Image URL</label>
            <input type="text" asp-for="RegionImageUrl" class="form-control" id="ImageUrl" name="RegionImageUrl" placeholder="Enter a Image URL" />
        </div>

        <!-- Button -->
        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit"
                    class="btn btn-danger"
                    asp-controller="Region"
                    asp-action="Delete">
                Delete
            </button>
        </div>
    </form>
}
